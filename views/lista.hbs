<a href="/" class="ref">Ir a formulario</a>
<h2>Productos</h2>
{{#if productos.length}}
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        {{#each productos}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td><img
                        class="img"
                        src="{{thumbnail}}"
                        alt="imagen del producto"
                    /></td>
            </tr>
        {{/each}}
    </table>
{{else}}
    <h3>No hay productos agregados!</h3>
{{/if}}